{
  "name": "pointing-sound-board",
  "version": "2.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "vercel-build": "npm run build && npm run build:sw",
    "build:sw": "rimraf dist/sw.js && workbox generateSW config/workbox-config.js",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{vue,js,json}\"",
    "clean": "rimraf dist coverage",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.1",
    "@vitest/coverage-c8": "^0.29.8",
    "@vue/test-utils": "^2.3.2",
    "c8": "^7.13.0",
    "esbuild": "^0.17.18",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "sass": "^1.62.1",
    "vite": "^4.3.9",
    "vitest": "^0.30.1",
    "workbox-cli": "^6.5.4"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "staticPath": "static",
  "lint-staged": {
    "*.{vue,js,json}": "prettier --write"
  }
}
