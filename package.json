{
  "name": "pointing-sound-board",
  "version": "2.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "vercel-build": "npm run build && npm run build:sw",
    "build:sw": "rimraf dist/sw.js && workbox generateSW config/workbox-config.js",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{vue,js,json}\"",
    "clean": "rimraf dist coverage",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "postcss": "^8.5.6",
    "tough-cookie": "^6.0.0",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "esbuild": "^0.25.12",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "sass": "^1.97.1",
    "vite": "^7.3.0",
    "vitest": "^4.0.6",
    "workbox-cli": "^7.4.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "staticPath": "static",
  "lint-staged": {
    "*.{vue,js,json}": "prettier --write"
  }
}
