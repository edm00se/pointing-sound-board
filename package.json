{
  "name": "pointing-sound-board",
  "version": "2.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "vercel-build": "npm run build && npm run build:sw",
    "build:sw": "rimraf dist/sw.js && workbox generateSW config/workbox-config.js",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{vue,js,json}\"",
    "clean": "rimraf dist coverage",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "postcss": "^8.4.49",
    "tough-cookie": "^5.0.0",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vue/test-utils": "^2.4.6",
    "esbuild": "^0.24.2",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "sass": "^1.83.4",
    "vite": "^6.0.6",
    "vitest": "^2.0.5",
    "workbox-cli": "^7.3.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "staticPath": "static",
  "lint-staged": {
    "*.{vue,js,json}": "prettier --write"
  }
}
