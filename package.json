{
  "name": "pointing-sound-board",
  "version": "2.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "vercel-build": "npm run build && npm run build:sw",
    "build:sw": "rimraf dist/sw.js && workbox generateSW config/workbox-config.js",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{vue,js,json}\"",
    "clean": "rimraf dist coverage",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "vue": "^3.2.41"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.3.4",
    "@vue/test-utils": "^2.2.1",
    "c8": "^7.12.0",
    "esbuild": "^0.15.12",
    "jsdom": "^20.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "sass": "^1.55.0",
    "vite": "^2.9.13",
    "vitest": "^0.24.4",
    "workbox-cli": "^6.5.4"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "staticPath": "static",
  "lint-staged": {
    "*.{vue,js,json}": "prettier --write"
  }
}
